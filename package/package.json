{
  "name": "updwn",
  "version": "0.0.1",
  "description": "Tiny up/down scroll detection.",
  "main": "dist/index.js",
  "scripts": {
    "lint": "standard 'src/*.js'",
    "prebuild": "npm run lint",
    "build": "babel index.js -d dist/",
    "watch": "babel -w index.js -d dist/",
    "umd": "browserify index.js --standalone updwn -d -p [minifyify --no-map] > dist/index.umd.js"
  },
  "browserify": {
    "debug": true,
    "cache": {},
    "packageCache": {},
    "extension": [
      "js"
    ],
    "transform": [
      "babelify"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/estrattonbailey/updwn.git"
  },
  "author": "estrattonbailey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/estrattonbailey/updwn/issues"
  },
  "homepage": "https://github.com/estrattonbailey/updwn#readme",
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.22.1",
    "babel-preset-babili": "0.0.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "minifyify": "^7.3.5",
    "standard": "^8.6.0"
  },
  "dependencies": {
    "loop.js": "^0.3.0",
    "srraf": "^0.1.0",
    "svel": "^0.2.0"
  }
}
